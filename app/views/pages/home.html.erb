              Details
              <span class="fas fa-angle-right ml-1"></span>
            </a>
          </div>
        </div>
        <!-- End Funding Status -->

      </div>
    </div>
  </div>
  <!-- End Campaign Item 1 -->

  <!-- Campaign Item 2 -->
